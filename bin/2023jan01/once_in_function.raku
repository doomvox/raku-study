use v6;

## https://docs.raku.org/syntax/once
my $guard = 3;
loop {
    last if $guard-- <= 0;
    once { put 'Once!' };  # Once!
    print 'many'           
} 


sub dostuff {
    once "We are doing stuff (again).";
    say 3;
 }




